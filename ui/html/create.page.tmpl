{{template "base" .}}

{{define "title"}}Create a New Snippet{{end}}

{{define "main"}}

<form action="/snippet/create" method="post">
  <div>
    <label for="frm_title">Title: </label>
    <input type="text" name="title" id="frm_title">
  </div>
  <div>
    <label for="frm_content">Content: </label>
    <textarea name="content" id="frm_content"></textarea>
  </div>
  <div>
    <label for="frm_expires">Delete in:</label>
    <input type="radio" name="expires" id="frm_expires" value="365" checked> One Year
    <input type="radio" name="expires" id="frm_expires" value="7"> One Week
    <input type="radio" name="expires" id="frm_expires" value="1"> One Day
  </div>
  <div>
    <input type="submit" value="Publish snippet">
  </div>
</form>

{{end}}
